<%= form_with(model: item, local: true) do |form| %>
  <% if item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.text_field :name, id: :item_name, placeholder: "add item" %>
  </div>

  <div class="field">
    <%= form.number_field :quantity, id: :item_quantity, placeholder: "how many" %>
  </div>

  <div class="field">
    <%= form.hidden_field :list_id, value: @list.id %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
